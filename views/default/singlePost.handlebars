<div class="mainContent">
        <div class="single-post-column">

                <!-- Title -->
                <h1 class="mt-4">{{post.title}}</h1>

                <!-- Author -->
                <p>
                    Published by
                    <a href="#">Admin</a>
                </p>

                <hr>

                <!-- Date/Time
                <p>Posted on {{post.creationDate}}</p>

                <hr> -->

                <!-- Preview Image -->
                <img class="img-fluid rounded" src="{{post.file}}" alt="Post Image">

                <hr>

                <!-- Post Content -->
                <div class="lead">
                    <p>{{{post.description}}}</p>
                </div>


                <hr>

                <!-- Comments Form -->
                <div class="card my-4">
                    <h5 class="card-header">Leave a Comment:</h5>
                    <div class="card-body">
                        <form action="/post/{{post._id}}" method="post">
                            <div class="form-group">
                                <textarea class="form-control" rows="3" name="comment_body"></textarea>
                                <input type="hidden" name="id" value="{{post._id}}">
                            </div>
                            <button type="submit" class="btn">Submit</button>
                        </form>
                    </div>
                </div>

                <!-- Single Comment -->

                {{#each post.comments}}
                    {{#if commentIsApproved}}
                        <div class="media mb-4">
                            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                            <div class="media-body">
                                <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
                                {{body}}
                            </div>
                        </div>
                    {{/if}}

                {{/each}}

        </div>

</div>

