<div class="container">
    <div class="alert alert-secondary text-center">
        <h1>Comments</h1>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered text-center text-white">
            <thead class="bg-dark">
            <tr>
                <th>Id</th>
                <th>Publisher</th>
                <th>Approve Comments</th>
                <th>Date</th>
                <th>Comment Body</th>
            </tr>
            </thead>

            <tbody class="text-dark">
            {{#each comments}}
                <tr>
                    <td>{{id}}</td>
                    <td style="width: auto;">{{user.firstName}} {{user.lastName}}</td>
                    <td><input type="checkbox" name="approveComments" class="approveComments" data-buttonid="{{id}}" {{#if commentIsApproved}}checked="checked"{{/if}} /></td>
                    <td>{{date}}</td>
                    <td>{{body}}</td>
                </tr>

            {{/each}}
            </tbody>


        </table>
    </div>
</div>